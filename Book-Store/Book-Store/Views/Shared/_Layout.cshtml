<!DOCTYPE html>

<html>
<head>
    <link href="~/css/Style.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>BookStore</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div>

        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" href="/">
                        <img src="~/images/aravind.jpg" width="30" height="30" asp-append-version="true" />

                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav">
                            <partial name="_LoginInfo" />
                        </ul>
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="aboutus" href="home/aboutus">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="home" asp-action="contactus" href="home/contactus">Contact</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"   href="book/getallbooks">All Books</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="book" asp-action="AddNewBook">Add new book</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <main>

            @RenderBody()

        </main>
        <footer class="border-top footer text-muted text-center">
            <div class="container">
                Copyright  &copy; Book Store @DateTime.Now.Year
                @*<a href="mailto:nitish.webgentle@gmail.com">nitish.webgentle@gmail.com</a>
                *@
                @*<cutom-email my-email="nitish@webgentle.com"></cutom-email>*@
            </div>
        </footer>
    </div>
</body>
</html>
